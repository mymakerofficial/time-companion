{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": [
    "src/renderer/**/*",
    "src/renderer/**/*.vue",
    "src/shared/**/*",
    "*.env.d.ts"
  ],
  "compilerOptions": {
    "composite": true,
    "moduleResolution": "Node",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@shared/*": ["./src/shared/*"],
      "@main/*": ["./src/main/*"],
      "@preload/*": ["./src/preload/*"],
      "@renderer/*": ["./src/renderer/*"]
    }
  }
}
